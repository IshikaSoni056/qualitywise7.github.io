<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../css/style.css" />
    <link rel="stylesheet" href="style.css" />
    <style>
      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }

      .card {
        flex: 0 1 calc(50% - 20px); /* Two cards side by side on large screens */
        margin-bottom: 20px;
      }

      @media (max-width: 768px) {
        .card {
          flex: 0 1 calc(100% - 20px); /* One card per row on small screens */
        }
      }
    </style>
  </head>
  <%- include('../../partials/head.ejs') %>
  <body>
    <div class="container">
      <div class="card">
        <!-- Profile Photo -->
        <div class="profile-photo">
          <img
            src="https://th.bing.com/th/id/OIP.IGNf7GuQaCqz_RPq5wCkPgAAAA?rs=1&pid=ImgDetMain"
            alt="Profile Photo"
          />
        </div>

        <!-- Rating Input -->
        <div class="details-section">
          <h2>Rating</h2>
          <input
            type="number"
            class="rating-input"
            placeholder="Enter overall rating"
          />
        </div>

        <!-- Description Input -->
        <div class="details-section">
          <h2>Description</h2>
          <textarea
            class="description-input"
            rows="5"
            placeholder="Enter description"
          ></textarea>
        </div>

        <!-- About Section -->
        <div class="details-section">
          <h2>About</h2>
          <p><strong>Name:</strong> John Doe</p>
          <p><strong>Email:</strong> john@example.com</p>
          <p><strong>Gender:</strong> Male</p>
        </div>

        <!-- Education Section -->
        <div class="details-section">
          <h2>Education</h2>
          <p><strong>School:</strong> XYZ University</p>
          <p><strong>Degree:</strong> Bachelor of Science</p>
          <p><strong>Graduation Date:</strong> May 2022</p>
        </div>

        <!-- Skills Section -->
        <div class="details-section">
          <h2>Skills</h2>
          <p>HTML, CSS, Jav , Python    </p>
        </div>
      </div>
    </div>
    <script type="module" src="script.js"></script>
  </body> 
  <%- include('../../partials/footer.ejs') %> 
</html>
