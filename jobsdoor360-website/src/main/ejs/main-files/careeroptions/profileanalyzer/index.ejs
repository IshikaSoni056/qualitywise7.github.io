<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Profile Analyzer</title>
    <meta name="description" content="Profile Analyzer" />
    <link
      rel="stylesheet"
      href="/staticfiles/mainfiles/careeroptions/profileanalyzer/style.css"
    />
    <%- include('../../../partials/head.ejs') %>
  </head>

  <body>
    <%- include('../../../partials/navbar.ejs') %>
    <section class="container">
      <h1 style="font-family: serif; margin-top: -35px">Profile Analyzer</h1>
      <div class="card">
        <div class="card-body">
          <form id="profileForm">
            <div class="main-user-info">
              <div class="user-input-box">
                <label for="jobType">Job Type:</label>
                <select type="text" id="jobType" name="jobType"></select>
              </div>

              <div class="user-input-box">
                <label for="industry">Industry:</label>
                <select type="text" id="industry" name="industry">
                  <option value="">none</option>
                </select>
              </div>

              <div class="user-input-box">
                <label for="profile">Work Profile:</label>
                <select type="text" id="profile" name="profile"></select>
              </div>
            </div>
            <div class="form-submit-btn">
              <input type="submit" id="submitButton" />
            </div>
          </form>
        </div>
      </div>

      <div class="container mt-3 mr-4 ml-4">
        <div class="row justify-content-center">
          <div class="col job-head">
            <h2 class="jobs-header text-center">Jobs</h2>
          </div>
        </div>
        <div id="loading" class="loading">getting jobs for you...</div>
        <div class="row">
          <div class="col">
            <div id="results" class="result-field"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->

    <%- include('../../../partials/footer.ejs') %>

    <!-- WhatsApp Chat Button -->
    <div class="chat-back-to-top">
      <!-- <button id="like-button">
        <i class="fa-solid fa-thumbs-up"></i>
      </button>
      <button id="dislike-button">
        <i class="fa-solid fa-thumbs-down"></i>
      </button> -->
      <div class="whatsapp-chat">
        <a
          href="https://api.whatsapp.com/send?phone=918319349660&text=I want to know more!"
          target="_blank"
        >
          <i class="fab fa-whatsapp"></i>
        </a>
      </div>
      <button id="backToTopBtn" class="back-to-top-btn" onclick="scrollToTop()">
        <i class="fa-solid fa-chevron-up"></i>
      </button>
    </div>

    <!-- The Bootstrap Modal -->
    <div
      class="modal fade"
      id="myModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              What Can We Improve on Our Website?
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <textarea
              id="feedback"
              class="form-control"
              placeholder="Your feedback..."
            ></textarea>
            <input
              type="text"
              id="phoneNumber"
              class="form-control"
              placeholder="Your phone number..."
            />
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button id="submitFeedback" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </div>
    </div>
    <script src="../../website_data/jobs_data.js"></script>
    <script src="../../website_data/website_masterdata.js"></script>
    <script
      type="module"
      src="/staticfiles/mainfiles/careeroptions/profileanalyzer/script.js"
    ></script>
    <script type="module" src="/staticfiles/script.js"></script>
  </body>
</html>
