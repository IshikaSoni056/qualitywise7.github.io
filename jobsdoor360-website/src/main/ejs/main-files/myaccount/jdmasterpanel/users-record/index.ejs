<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Document</title>
    <link
      rel="stylesheet"
      href="/staticfiles/mainfiles/myaccount/jdmasterpanel/users-record/style.css"
    />
    <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <!-- Search bar -->
    <div class="search-container">
      <input type="text" id="searchInput" placeholder="Search the name..." />
      <button type="button" onclick="searchProfiles()">Search</button>

      <!-- New search bar for remarks presence -->
      <input
        type="text" id="remarksSearchInput"
        placeholder=" type present/absent for check remark..."
      />
       
      <button type="button" id="checkButton" onclick="searchRemarks()">Check</button>
     <!--rating search bar-->
      <input type="number" id="ratingSearchInput" placeholder="Search by Rating...">
    <button type="button" onclick="searchByRating()">Search</button>
    </div>

    <table id="userProfilesTable">
      <thead>
        <tr>
          <th>S.No</th>
          <th>Profile Photo</th>
          <th>Name</th>
          <th>Email</th>
          <th>Gender</th>
          <th>School</th>
          <th>Degree</th>
          <th>Graduation Date</th>
          <th>Skills</th>
          <th>Rating</th>
          <th>Remarks</th>
          <th>Action</th>
          <!-- New column for Submit Button -->
        </tr>
      </thead>
      <tbody>
        <!-- User profiles will be dynamically inserted here -->
      </tbody>
    </table>
    <script
      
      src="/staticfiles/mainfiles/myaccount/jdmasterpanel/users-record/script.js"
    ></script>
  </body>
  <%- include('../partials/footer.ejs') %>
</html>
